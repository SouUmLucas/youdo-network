<div class="ui middle aligned center aligned grid">
  <div class="eight wide column">
    <h2 class="header">Login</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "ui large form" }) do |f| %>
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.text_field :login, autofocus: true, autocomplete: "email", placeholder: 'Login' %>
          </div>
        </div>
  
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password, autocomplete: "off", placeholder: 'Senha' %>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <div class="ui checkbox">
              <%= f.check_box :remember_me %>
              <%= f.label "Lembrar-me" %>
            </div>
          </div>
        <% end -%>
          
        <div class="ui buttons">
          <%= f.submit "Log in", class: "ui primary button" %>
          <div class="or"></div>
          <%= link_to "Inscreva-se", new_registration_path(resource_name), class: "ui positive button" %><br />
        </div>
      </div>
    <% end %>
  </div>
</div>


